{
  "parser": "babel-eslint",
  "extends": [
    "airbnb",
    "prettier/react",
    "eslint:recommended",
    "prettier"
  ],
  "plugins": ["react", "prettier"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "jest": true
  },
  "globals": {
    "__DEV__": true,
    "__PROD__": true,
    "__DEBUG__": true,
    "__COVERAGE__": true,
    "__BASENAME__": true
  },
  "rules": {
    "prettier/prettier": ["error"],
    "import/no-dynamic-require": 0,
    "import/no-extraneous-dependencies": 0,
    "import/prefer-default-export": 0,
    "import/no-unresolved": "off",
    "linebreak-style": 0,
    "max-len": 0,
    "no-shadow": 0,
    "arrow-body-style": 0,
    "arrow-parens": 0,
    "global-require": 0,
    "no-unused-expressions": 0,
    "no-underscore-dangle": 0,
    "no-confusing-arrow": 0,
    "no-unused-vars": ["error", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false, "argsIgnorePattern": "^_|params" }],
    "sort-imports": 0,
    "react/require-default-props": 0,
    "react/no-multi-comp": 0,
    "react/forbid-prop-types": 0,
    "react/jsx-filename-extension": [
      2,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "react/prop-types": [
      1,
      {
        "skipUndeclared": true,
        "ignore": ["children"]
      }
    ],
    "react/display-name": 0,
    "no-constant-condition": ["error", { "checkLoops": false }],
    "no-console": 0,
    "no-restricted-globals": 0
  }
}